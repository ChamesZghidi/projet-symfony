                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label">
                                <i class="fas fa-users"></i> Capacit√© maximale
                            </label>
                            {{ form_widget(form.capacity, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex: 100',
                                'min': '1'
                            }}) }}
