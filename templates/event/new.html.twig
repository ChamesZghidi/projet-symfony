                            {{ form_errors(form.prix) }}
                        </div>
                    </div>
                </div>

                <!-- Section Description -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-align-left"></i> Description d√©taill√©e
                    </div>

                    <div class="mb-4">
                        <label class="form-label">
                            <i class="fas fa-file-alt"></i> Description de l'√©v√©nement
                        </label>
                        {{ form_widget(form.description, {'attr': {
                            'class': 'form-control',
                            'rows': '6',
                            'placeholder': 'D√©crivez en d√©tail votre √©v√©nement, les activit√©s pr√©vues, les intervenants, etc...',
                            'oninput': 'updateCharacterCount(this, 1000)'
                        }}) }}
                        <div class="character-count" id="descriptionCount">0/1000 caract√®res</div>
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <!-- Section Image -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-image"></i> Visuel de l'√©v√©nement
                    </div>

                    <div class="mb-4">
                        <label class="form-label">
                            <i class="fas fa-upload"></i> Image principale
                        </label>

                        <!-- Zone de drag & drop -->
