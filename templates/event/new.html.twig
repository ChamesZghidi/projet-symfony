    </div>

    <!-- JavaScript am√©lior√© -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dropArea = document.getElementById('dropArea');
            const fileInput = document.getElementById('fileInput');
            const fileInfo = document.getElementById('fileInfo');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            const imagePreview = document.getElementById('imagePreview');
            const previewImage = document.getElementById('previewImage');

            // Gestion du drag & drop
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropArea.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                dropArea.addEventListener(eventName, highlight, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropArea.addEventListener(eventName, unhighlight, false);
            });

            function highlight() {
                dropArea.classList.add('dragover');
            }

            function unhighlight() {
                dropArea.classList.remove('dragover');
            }

            // Gestion du drop
            dropArea.addEventListener('drop', handleDrop, false);

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;

                if (files.length > 0) {
                    fileInput.files = files;
                    handleFileSelect(files[0]);
                }
            }

            // Gestion du clic
            dropArea.addEventListener('click', () => {
                fileInput.click();
            });

            // Gestion du changement de fichier
            fileInput.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    handleFileSelect(this.files[0]);
                }
            });

            // Fonction pour g√©rer le fichier s√©lectionn√©
            function handleFileSelect(file) {
                // Validation
                const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
                const maxSize = 5 * 1024 * 1024; // 5MB

                if (!validTypes.includes(file.type)) {
                    alert('Format de fichier non support√©. Veuillez choisir une image (JPG, PNG, GIF, WebP).');
                    return;
                }

                if (file.size > maxSize) {
                    alert('Fichier trop volumineux. La taille maximale est de 5MB.');
                    return;
                }

                // Afficher les infos du fichier
                fileName.textContent = file.name;
                fileSize.textContent = formatFileSize(file.size);
                fileInfo.style.display = 'block';

                // Pr√©visualisation
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    imagePreview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }

            // Supprimer le fichier
            window.removeFile = function() {
                fileInput.value = '';
                fileInfo.style.display = 'none';
                imagePreview.style.display = 'none';
            };

            // Formater la taille du fichier
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }

            // Compteur de caract√®res
            window.updateCharacterCount = function(input, max) {
                const count = input.value.length;
                const counter = document.getElementById(input.id + 'Count');
                if (counter) {
                    counter.textContent = `${count}/${max} caract√®res`;
                    counter.className = 'character-count';
                    if (count > max * 0.8) counter.classList.add('warning');
                    if (count > max * 0.95) counter.classList.add('danger');
                }
            };

            // Initialiser les compteurs
            const nomInput = document.querySelector('#{{ form.nom.vars.id }}');
            const descInput = document.querySelector('#{{ form.description.vars.id }}');
            if (nomInput) updateCharacterCount(nomInput, 255);
            if (descInput) updateCharacterCount(descInput, 1000);
        });
    </script>
{% endblock %}
